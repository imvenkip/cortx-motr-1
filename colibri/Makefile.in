LINUX = @LINUX@
COLIBRI_SRCDIR = @SRCDIR@/colibri

ifeq ($(LINUX),y)

obj-m := colibri.o
EXTRA_CFLAGS = -DHAVE_CONFIG_H @KCFLAGS@

all:
	$(MAKE) -C @KERNELDIR_OBJ@ M=`pwd` modules

install modules_install:
	$(MAKE) INSTALL_MOD_DIR=kernel/fs/colibri -C @KERNELDIR_OBJ@ M=`pwd` modules_install

uninstall:
	rm -fr @KERNELMOD_DIR@/kernel/fs/colibri

distclean clean:
	$(MAKE) -C @KERNELDIR_OBJ@ M=`pwd` clean;
	rm -fr Module.symvers

else

all:
install:
uninstall:
distclean clean:

endif

distdir:
	cp $(COLIBRI_SRCDIR)/Makefile.in $(COLIBRI_SRCDIR)/colibri.c @top_builddir@/@PACKAGE@-@VERSION@/colibri
