OS = @OS@
C2T1FS_SRCDIR = @SRCDIR@/c2t1fs

ifeq ($(OS),linux)

obj-m := c2t1fs.o
EXTRA_CFLAGS = -DHAVE_CONFIG_H @KCFLAGS@

all:
	$(MAKE) -C @LINUX_OBJ@ M=`pwd` modules

install modules_install:
	$(MAKE) INSTALL_MOD_DIR=kernel/fs/c2t1fs -C @LINUX_OBJ@ M=`pwd` modules_install

uninstall:
	rm -fr @LINUX_MOD@/kernel/fs/c2t1fs

distclean clean:
	$(MAKE) -C @LINUX_OBJ@ M=`pwd` clean;
	rm -fr Module.symvers

else

all:
install:
uninstall:
distclean clean:

endif

distdir:
	cp $(C2T1FS_SRCDIR)/Makefile.in $(C2T1FS_SRCDIR)/c2t1fs.c @top_builddir@/@PACKAGE@-@VERSION@/c2t1fs
