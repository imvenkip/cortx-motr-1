SM_SRCDIR = @SRCDIR@/cob/linux_kernel

obj-m		:= kcob.o
shared_src	:= cob.c
kernel_src	:= cob_kernel.c
kcob-y		:= $(shared_src:.c=.o) $(kernel_src:.c=.o)
orig		:= $(shared_src:%=../%)

EXTRA_CFLAGS = -DHAVE_CONFIG_H -I@SRCDIR@ @KCFLAGS@

prepare:
	ln -fs $(orig) .

install modules_install:
	$(MAKE) INSTALL_MOD_DIR=kernel/fs/cob -C @LINUX_OBJ@ M=`pwd` modules_install

uninstall:
	rm -rf @LINUX_MOD@/kernel/fs/cob

clean distclean:
	$(RM) $(shared_src) Module.markers Module.symvers modules.order
	$(MAKE) -C @LINUX_OBJ@ M=`pwd` clean

distdir:
	cp $(FID_SRCDIR)/Makefile.in $(FID_SRCDIR)/cob.h \
	    @top_builddir@/@PACKAGE@-@VERSION@/cob/linux_kernel
