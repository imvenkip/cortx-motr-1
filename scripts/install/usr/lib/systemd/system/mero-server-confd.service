[Unit]
Description=Mero server helper for confd service
Requires=mero-kernel.service
Wants=mero-trace@confd.service
After=mero-kernel.service
Before=mero-trace@confd.service mero-server@.service mero-client.service
PartOf=mero.service

[Service]
Type=notify
TimeoutStopSec=20
Restart=no
EnvironmentFile=-/var/mero/env.sh
Group=mero
ExecStart=/usr/libexec/mero/mero-server confd
