[Unit]
Description=Mero server helper for confd service
Requires=mero-kernel.service
Wants=mero-trace@confd.service
After=mero-kernel.service
Before=mero-trace@confd.service mero-server@.service mero-server-ha.service mero-client.service
PartOf=mero.service

[Service]
Type=notify
Restart=on-abort
StartLimitInterval=5
StartLimitBurst=1
ExecStart=/usr/libexec/mero/mero-server confd
