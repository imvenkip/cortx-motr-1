SM_SRCDIR = @SRCDIR@/sm/linux_kernel

obj-m		:= ksm.o
shared_src	:= sm.c
kernel_src	:= sm_kernel.c
ksm-y		:= $(shared_src:.c=.o) $(kernel_src:.c=.o)
orig		:= $(shared_src:%=../%)

EXTRA_CFLAGS = -DHAVE_CONFIG_H -I@SRCDIR@ @KCFLAGS@

prepare:
	ln -fs $(orig) .

install modules_install:
	$(MAKE) INSTALL_MOD_DIR=kernel/fs/sm -C @LINUX_OBJ@ M=`pwd` modules_install

uninstall:
	rm -rf @LINUX_MOD@/kernel/fs/sm

clean distclean:
	$(RM) $(shared_src) Module.markers Module.symvers modules.order
	$(MAKE) -C @LINUX_OBJ@ M=`pwd` clean

distdir:
	cp $(SM_SRCDIR)/Makefile.in $(SM_SRCDIR)/sm.h \
	    @top_builddir@/@PACKAGE@-@VERSION@/sm/linux_kernel
