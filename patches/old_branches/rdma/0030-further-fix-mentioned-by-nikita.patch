 stob/ut/server.c | 3 ++-
 2 files changed, 2 insertions(+), 6 deletions(-)

diff --git a/configure.ac b/configure.ac
index 8eda013..d1943af 100755
--- a/configure.ac
+++ b/configure.ac
@@ -289,11 +289,6 @@ AC_ARG_ENABLE([db-o_direct],
         [enable_db_o_direct=no]
 )
 
