index 02ae930..a406db8 100644
--- a/stob/ut/server.c
+++ b/stob/ut/server.c
@@ -434,7 +434,8 @@ int main(int argc, char **argv)
 	if (strcmp(trans, "tcp") ||
 	    strcmp(trans, "udp") ||
 	    strcmp(trans, "rdma"))
-		fprintf(stderr, "unknown transport %s\n", trans);
+		fprintf(stderr, "unknown transport %s, it must be one"
+			"of tcp or rdma\n", trans);
 		return -1;
 
 	C2_ASSERT(strlen(path) < ARRAY_SIZE(opath) - 8);
