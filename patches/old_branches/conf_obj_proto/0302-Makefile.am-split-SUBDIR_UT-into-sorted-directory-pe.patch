Subject: [PATCH 302/370] Makefile.am: split SUBDIR_UT into sorted
 directory-per-line form

RB: r/981/diff/3/?file=27976#file27976line44
---
 Makefile.am | 37 ++++++++++++++++++++++++++++++-------
 1 file changed, 30 insertions(+), 7 deletions(-)

diff --git a/Makefile.am b/Makefile.am
index 152412b..81521a3 100644
--- a/Makefile.am
+++ b/Makefile.am
@@ -40,10 +40,33 @@ SUBDIRS_LIBS =                     \
 
 SUBDIR_IT = rpc/it
 
-SUBDIR_UT = fop/ut fop/ut/long_lock lib/ut stob/ut layout/ut balloc/ut \
-	    db/ut fol/ut sns/ut desim/ut cob/ut conf/ut console/ut colibri/ut \
-	    net/ut net/bulk_emulation/ut net/lnet/ut udb/ut capa/ut \
-	    ioservice/ut reqh/ut rpc/ut sm/ut xcode/ut yaml2db/ut
+# Keep this list alphabetically sorted.
+SUBDIR_UT =                       \
+            balloc/ut             \
+            capa/ut               \
+            cob/ut                \
+            colibri/ut            \
+            conf/ut               \
+            console/ut            \
+            db/ut                 \
+            desim/ut              \
+            fol/ut                \
+            fop/ut                \
+            fop/ut/long_lock      \
+            ioservice/ut          \
+            layout/ut             \
+            lib/ut                \
+            net/bulk_emulation/ut \
+            net/lnet/ut           \
+            net/ut                \
+            reqh/ut               \
+            rpc/ut                \
+            sm/ut                 \
+            sns/ut                \
+            stob/ut               \
+            udb/ut                \
+            xcode/ut              \
+            yaml2db/ut
 
 SUBDIR_KERNEL = build_kernel_modules
 
@@ -53,9 +76,9 @@ SUBDIR_UB =
 
 SUBDIR_BIN = console/bin mds utils
 
-SUBDIRS    = $(SUBDIRS_BASE) $(SUBDIRS_LIBS) colibri $(SUBDIR_IT)    \
-             $(SUBDIR_UT) $(SUBDIR_ST) $(SUBDIR_KERNEL) $(SUBDIR_UB) \
-             $(SUBDIR_BIN)
+SUBDIRS = $(SUBDIRS_BASE) $(SUBDIRS_LIBS) colibri $(SUBDIR_IT)    \
+          $(SUBDIR_UT) $(SUBDIR_ST) $(SUBDIR_KERNEL) $(SUBDIR_UB) \
+          $(SUBDIR_BIN)
 
 etags:
 	find . -name '*.[ch]' | xargs etags
