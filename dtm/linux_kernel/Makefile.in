SM_SRCDIR = @SRCDIR@/dtm/linux_kernel

obj-m		:= kdtm.o
shared_src	:= verno.c 
kernel_src	:= dtm_kernel.c
kdtm-y		:= $(shared_src:.c=.o) $(kernel_src:.c=.o)
orig		:= $(shared_src:%=../%)

EXTRA_CFLAGS = -DHAVE_CONFIG_H -I@SRCDIR@ @KCFLAGS@

prepare:
	ln -fs $(orig) .

install modules_install:
	$(MAKE) INSTALL_MOD_DIR=kernel/fs/dtm -C @LINUX_OBJ@ M=`pwd` modules_install

uninstall:
	rm -rf @LINUX_MOD@/kernel/fs/dtm

clean distclean:
	$(RM) $(shared_src) Module.markers Module.symvers modules.order
	$(MAKE) -C @LINUX_OBJ@ M=`pwd` clean

distdir:
	cp $(FID_SRCDIR)/Makefile.in $(FID_SRCDIR)/dtm.h \
	    @top_builddir@/@PACKAGE@-@VERSION@/dtm/linux_kernel
