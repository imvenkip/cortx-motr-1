#! /bin/sh

# Small wrapper to run kernel UT

if [ "$(id -u)" -ne 0 ]; then
    echo "Must be run as root"
    exit 1
fi

. @SRCDIR@/c2t1fs/linux_kernel/st/common.sh

MODLIST="@SRCDIR@/build_kernel_modules/kcolibri.ko \
         @SRCDIR@/build_kernel_modules/c2loop.ko   \
         @SRCDIR@/utils/linux_kernel/kutc2.ko"

log='/var/log/kern'
if [ ! -e "$log" ]; then
    log='/var/log/messages'
fi
tailseek=$(( $(stat -c %s "$log") + 1 ))

modprobe_lnet
modload_galois
# currently, kernel UT runs as part of loading kutc2 module
modload
# LNet driver UT requires a user space helper
@SRCDIR@/net/lnet/ut/lut_helper
modunload
modunload_galois

tail -c+$tailseek "$log" | grep ' kernel: '
