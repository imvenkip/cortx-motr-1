#! /bin/sh

# Small wrapper to run kernel UT

if [ "$(id -u)" -ne 0 ]; then
    echo "Must be run as root"
    exit 1
fi

. @abs_top_srcdir@/m0t1fs/linux_kernel/st/common.sh

MODLIST="@abs_top_srcdir@/build_kernel_modules/kmero.ko \
         @abs_top_srcdir@/build_kernel_modules/m0loop.ko   \
         @abs_top_srcdir@/utils/linux_kernel/kutm0.ko"

log='/var/log/kern'
if [ ! -e "$log" ]; then
    log='/var/log/messages'
fi
tailseek=$(( $(stat -c %s "$log") + 1 ))

modprobe_lnet
modload_galois
# currently, kernel UT runs as part of loading kutm0 module
modload
# LNet driver UT requires a user space helper
@abs_top_srcdir@/net/lnet/ut/lut_helper
modunload
modunload_galois

tail -c+$tailseek "$log" | grep ' kernel: '
