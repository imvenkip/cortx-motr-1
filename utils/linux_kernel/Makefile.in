KUTM0_SRCDIR = @top_srcdir@/utils/linux_kernel

obj-m       := kutm0.o m0ctl.o
kutm0-y     := main.o
m0ctl-y     := ctl.o finject_debugfs.o

EXTRA_CFLAGS = -DHAVE_CONFIG_H -iquote @top_srcdir@ @M0_KCPPFLAGS@ @M0_KCFLAGS@ \
	       @KCFLAGS@

prepare:

distclean clean:
	$(RM) $(shared_ut) Module.markers Module.symvers modules.order
	$(MAKE) -C @LINUX_OBJ@ M=`pwd` clean;

distdir:
	cp $(KUTM0_SRCDIR)/Makefile.in $(KUTM0_SRCDIR)/main.c \
@top_builddir@/@PACKAGE@-@PACKAGE_VERSION@/utils/linux_kernel
