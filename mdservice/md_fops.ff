/**
   @addtogroup mdservice-fops-definition Metadata Fops Definition
   @{
 */

/** @file md_fops.ff
 *
 * <b>Mero metatadata fop formats</b>
 *
 */

require "fid/fid_xc";
require "fid/fid";

sequence {
        u32 s_len;
        u8  s_buf
} m0_fop_str;

record {
        u32 b_rc;
        u64 b_index;
        u64 b_version;
        u32 b_flags;
        u32 b_valid;
        u32 b_mode;
        u64 b_size;
        u64 b_blksize;
        u64 b_blocks;
        u32 b_nlink;
        u32 b_uid;
        u32 b_gid;
        u32 b_sid;
        u64 b_nid;
        u32 b_rdev;
        u32 b_atime;
        u32 b_mtime;
        u32 b_ctime;
        m0_fid b_pfid;
        m0_fid b_tfid
} m0_fop_cob;

record {
        m0_fop_cob c_body;
        m0_fop_str c_target;
        m0_fop_str c_path;
        m0_fop_str c_name
} m0_fop_create;

record {
        m0_fop_cob c_body
} m0_fop_create_rep;

record {
        m0_fop_cob l_body;
        m0_fop_str l_path;
        m0_fop_str l_name
} m0_fop_lookup;

record {
        m0_fop_cob l_body
} m0_fop_lookup_rep;

record {
        m0_fop_cob l_body;
        m0_fop_str l_spath;
        m0_fop_str l_tpath;
        m0_fop_str l_name
} m0_fop_link;

record {
        m0_fop_cob l_body
} m0_fop_link_rep;

record {
        m0_fop_cob u_body;
        m0_fop_str u_path;
        m0_fop_str u_name
} m0_fop_unlink;

record {
        m0_fop_cob u_body
} m0_fop_unlink_rep;

record {
        m0_fop_cob r_sbody;
        m0_fop_cob r_tbody;
        m0_fop_str r_spath;
        m0_fop_str r_tpath;
        m0_fop_str r_sname;
        m0_fop_str r_tname
} m0_fop_rename;

record {
        m0_fop_cob r_body
} m0_fop_rename_rep;

record {
        m0_fop_str o_path;
        m0_fop_cob o_body
} m0_fop_open;

record {
        m0_fop_cob o_body
} m0_fop_open_rep;

record {
        m0_fop_cob c_body;
        m0_fop_str c_path
} m0_fop_close;

record {
        m0_fop_cob c_body
} m0_fop_close_rep;

record {
        m0_fop_cob s_body;
        m0_fop_str s_path
} m0_fop_setattr;

record {
        m0_fop_cob s_body
} m0_fop_setattr_rep;

record {
        m0_fop_cob g_body;
        m0_fop_str g_path
} m0_fop_getattr;

record {
        m0_fop_cob g_body
} m0_fop_getattr_rep;

record {
        m0_fop_cob r_body;
        m0_fop_str r_path;
        m0_fop_str r_pos
} m0_fop_readdir;

sequence {
        u32 b_count;
        u8  b_addr
} m0_fop_buf;

record {
        m0_fop_str r_end;
        m0_fop_cob r_body;
        m0_fop_buf r_buf
} m0_fop_readdir_rep;

record {
        u64        f_flags
} m0_fop_statfs;

record {
        u32        f_rc;
        u64        f_type;
        u32        f_bsize;
        u64        f_blocks;
        u64        f_bfree;
        u64        f_bavail;
        u64        f_files;
        u64        f_ffree;
        u32        f_namelen;
        m0_fid     f_root
} m0_fop_statfs_rep;

/** @} end of fop group */

