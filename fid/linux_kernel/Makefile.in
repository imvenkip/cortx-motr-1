FID_SRCDIR = @SRCDIR@/fid/linux_kernel

GCOV_PROFILE := @K_ENABLE_COVERAGE@

obj-y		:= kfid.o
shared_src	:= fid.c
kernel_src	:=
kfid-y		:= $(shared_src:.c=.o) $(kernel_src:.c=.o)
orig		:= $(shared_src:%=../%)

EXTRA_CFLAGS = -DHAVE_CONFIG_H -I@SRCDIR@ @KCFLAGS@

prepare:
	ln -fs $(orig) .

install modules_install:
	$(MAKE) INSTALL_MOD_DIR=kernel/fs/fid -C @LINUX_OBJ@ M=`pwd` modules_install

uninstall:
	rm -rf @LINUX_MOD@/kernel/fs/fid

clean distclean:
	$(RM) $(shared_src) Module.markers Module.symvers modules.order
	$(MAKE) -C @LINUX_OBJ@ M=`pwd` clean

distdir:
	cp $(FID_SRCDIR)/Makefile.in $(FID_SRCDIR)/fid.h \
	    @top_builddir@/@PACKAGE@-@VERSION@/fid/linux_kernel
